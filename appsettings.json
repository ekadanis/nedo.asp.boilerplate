{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=nedo_documents;Username=postgres;Password=postgres;Port=5432"
  },
  "NedoRequestInputValidation": {
    "EnableFormatValidators": true,
    "EnableSecurityValidators": true,
    "MaxJsonDepth": 32,
    "MaxRequestBodySize": 10485760,
    "AllowedContentTypes": [
      "application/json"
    ],
    "ExcludedPaths": [
      "/swagger",
      "/health"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}